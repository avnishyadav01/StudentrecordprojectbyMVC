
@{
    ViewBag.Title = "showrecords";
}
@model List<StudentRecordMVC.Models.StudentRecordModel>

<h2 align ="center" style="color:darkblue">Student Records</h2>
<table class="table table-success table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>DOB</th>
        <th>Age</th>
        <th>E-mail</th>
        <th>Class</th>
        <th>Result</th>
        <th>Branch</th>
        <th>Date Of Admission</th>
        <th>Skill</th>
        <th>Update</th>
        <th>Delete</th>

    </tr>
    
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.Id</th>
            <th>@x.Name</th>
            <th>@x.DOB</th>
            <th>@x.Age</th>
            <th>@x.Email</th>
            <th>@x.Class</th>
            <th>@x.Result</th>
            <th>@x.Branch</th>
            <th>@x.DOA</th>
            <th>
                @if(@x.IsJava==true)
                {<i>Java</i>
                }
                 @if(@x.IsCpp==true)
                {<i>Cpp</i>
                }
                  @if(@x.IsPython==true)
                {<i>Python</i>
                }
            </th>

            <th><a href="@Url.Action("Updaterecords", "Student", new { x.Id, x.Name, x.DOB, x.Age, x.Email, x.Class, x.Result })" class="btn btn-warning">Update</a></th>
            <th><a href="@Url.Action("Deleterecords", "Student", new { x.Id})" class="btn btn-danger">Delete</a></th>

        </tr>
    }
</table>


    @Html.ActionLink("Add more Student records", "Addrecords", "Student", new { @class = "btn btn-primary" })



